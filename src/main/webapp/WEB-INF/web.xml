<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
              http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <resource-ref>
        <description>com_vanging_www_yoyo</description>
        <res-ref-name>jdbc/com_vanging_www_yoyo</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <filter>
        <filter-name>response_header</filter-name>
        <filter-class>com.vanging.www.yoyo.restful.filter.ResponseHeader</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>response_header</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>encoding</filter-name>
        <filter-class>com.vanging.www.yoyo.restful.filter.Encoding</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>encoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>/</servlet-name>
        <servlet-class>com.vanging.www.yoyo.restful.servlet.Index</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>/</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>